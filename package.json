{
  "name": "spectado-hls-relay",
  "version": "1.0.3",
  "description": "Simple HLS audio relay server",
  "license": "MIT",
  "author": "SPECTADO, s.r.o.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js --ignore '_temp/*'",
    "debug": "serve -l 8888",
    "build": "docker build . -t spectado/spectado-hls-relay --platform linux/amd64",
    "ffmpeg:macos": "ffbinaries ffmpeg --platform=mac --output=./_temp",
    "ffmpeg:linux": "ffbinaries ffmpeg --platform=linux-64 --output=./_temp",
    "ffmpeg:win": "ffbinaries ffmpeg --platform=windows-64 --output=./_temp",
    "version": "echo $npm_package_version"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "mkdirp": "^1.0.4",
    "node-fetch": "^3.2.10",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "ffbinaries": "^1.1.4",
    "nodemon": "^2.0.19",
    "serve": "^14.0.1"
  },
  "keywords": [
    "hls",
    "relay",
    "audio",
    "live",
    "stream"
  ]
}
